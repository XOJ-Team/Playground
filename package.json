{
  "name": "xoj-playground",
  "displayName": "XOJ Playground",
  "description": "A playground extension for XOJ Web IDE and desktop VSC",
  "icon": "assets/logo_128px.png",
  "repository": {
    "type": "git",
    "url": "https://dev.azure.com/XOJ-Team/XOJ/_git/XOJ_Playground"
  },
  "version": "1.0.1",
  "publisher": "XOJ-Team",
  "license": "AGPL-3.0",
  "engines": {
    "vscode": "^1.63.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri",
    "onCommand:xoj-playground.start",
    "workspaceContains:**/.xojworkspace"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "xoj-playground-container": [
        {
          "type": "webview",
          "id": "playground.container.descriptionView",
          "name": "Description",
          "visibility": "visible",
          "when": "!xoj-playground:disabled"
        },
        {
          "type": "tree",
          "id": "playground.container.actionView",
          "name": "Actions",
          "visibility": "visible",
          "when": "!xoj-playground:disabled"
        }
      ],
      "xoj-playground-panel-container": [
        {
          "type": "tree",
          "id": "playground.panel.resultView",
          "name": "Result",
          "visibility": "visible",
          "when": "!xoj-playground:disabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xoj-playground-container",
          "title": "XOJ Action Center",
          "icon": "assets/logo_50px.svg"
        }
      ],
      "panel": [
        {
          "id": "xoj-playground-panel-container",
          "title": "XOJ",
          "icon": "assets/logo_50px.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "playground.container.actionView",
        "contents": "To get started, please \n[$(library) Select a Language](command:xoj-playground.selectLanguage) \n Other Actions: \n [$(play) Run on XOJ](command:xoj-playground.run) \n [$(cloud-upload) Submit](command:xoj-playground.submit) \n [$(refresh) Refresh / Re-connect](command:xoj-playground.refresh) \n For more help, visit our [website](https://xoj.codes)."
      }
    ],
    "commands": [
      {
        "command": "xoj-playground.refresh",
        "title": "Playground: Refresh"
      },
      {
        "command": "xoj-playground.connect",
        "title": "Playground: Connect / Re-connect"
      },
      {
        "command": "xoj-playground.start",
        "title": "Playground: Start XOJ from Web"
      },
      {
        "command": "xoj-playground.showConnectionStatus",
        "title": "Playground: Show Connection Status"
      },
      {
        "command": "xoj-playground.run",
        "title": "Playground: Run on XOJ"
      },
      {
        "command": "xoj-playground.submit",
        "title": "Playground: Submit"
      },
      {
        "command": "xoj-playground.selectLanguage",
        "title": "Playground: Select Language"
      }
    ],
    "keybindings": [
      {
        "command": "xoj-playground.run",
        "key": "ctrl+k",
        "mac": "cmd+k",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "xoj-playground.start",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Default Server",
      "properties": {
        "xoj-playground.targetServer": {
          "type": "string",
          "default": "https://api.xoj.codes",
          "description": "Backend server to connect to."
        },
        "xoj-playground.judgeServer": {
          "type": "string",
          "default": "https://api.xoj.codes/judge",
          "description": "Judge server to connect to."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "pack-vsix": "vsce package --yarn",
    "deploy-ms": "vsce publish --yarn",
    "deploy-vsx": "ovsx publish --yarn"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/marked": "^4.0.3",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/codicons": "^0.0.29",
    "@vscode/test-electron": "^2.1.2",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "marked": "^4.0.14",
    "mocha": "^9.2.1",
    "ovsx": "^0.3.0",
    "terser-webpack-plugin": "^5.3.1",
    "ts-loader": "^9.2.6",
    "typed-rest-client": "^1.8.6",
    "typescript": "^4.5.5",
    "vsce": "^2.7.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {}
}
